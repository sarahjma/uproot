<div class="main-container">
<span id="city-list" class="d-none" data-cities="<%= City.all.pluck(:name).sort %>"></span>
<h3 class="text-center">Enter the name of a city to start exploring </h3>
  <%= form_tag cities_path, method: :get, class: "city-form" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control search",
      placeholder: "Find a city",
      autocomplete: "off"
    %>
    <ul id="results" class="pl-3"></ul>
    <div class= "footer-submit">
      <%= submit_tag "Search", class: "btn-next" %>
    </div>
  <% end %>
  <div class="mt-3">
    <% if @cities %>
      <% @cities.each do |city| %>
        <%= link_to city_path(city.id) do %>
          <div class="card-city" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),url(<%= city.image %>)">
            <p> <%= city.name %> </p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
