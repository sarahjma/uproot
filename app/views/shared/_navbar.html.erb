<!-- RESPONSIVE NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light">
  <%= link_to "Uproot", root_path, class: "navbar-brand" %>

  <!-- SM SCREEN: burger icon, with nav-item -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- L SCREEN: nav-items are displayed on the navbar -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <%= form_tag cities_path, method: :get, class: "d-flex align-items-center" do %>
          <%= text_field_tag :query,
                      params[:query],
                      class: "form-control",
                      placeholder: "Find a city"
          %>
          <%= submit_tag "Search", class: "btn-next-nav d-flex" %>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to "Start Quiz", quiz_results_path, method: :post, class: "nav-link d-flex" %>
      </li>
      <li class="nav-item active">
        <% if current_user.nil? %>
          <li class="nav-item active">
             <%= link_to "Sign in", new_user_registration_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Profile", current_user, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      </li>
    </ul>
  </div>

</div>
